<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/">Home</a></li>
    <li class="breadcrumb-item"><a href="#">View User</a></li>
  </ol>
</nav>


<div class="p-5">
    {{#each rows}}
    <div class="row mb-5">
        <div class="col text-center">
            <h3>
                Name : {{this.first_name}}
                {{this.last_name}}
            </h3>
            <h4>Phone Number : {{this.phone}}</h4>
            <h4> Email : {{this.email}}</h4>
            {{#if this.comments}}
            <h4>Comments : {{this.comments}}</h4>
            {{/if}}
        </div>
    </div>
    {{/each}}
</div>